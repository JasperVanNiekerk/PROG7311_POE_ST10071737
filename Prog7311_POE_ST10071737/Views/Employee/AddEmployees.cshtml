@model Prog7311_POE_ST10071737.Models.AddEmployeeVM
@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Registration</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG6212_POE_Final_ST10071737.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f0f8ff; /* Light blue background for better visibility */
            background-image: linear-gradient(45deg, #7fbf5b 25%, transparent 25%, transparent 50%, #7fbf5b 50%, #7fbf5b 75%, transparent 75%, transparent), linear-gradient(45deg, #7fbf5b 25%, transparent 25%, transparent 50%, #7fbf5b 50%, #7fbf5b 75%, transparent 75%, transparent);
            background-size: 40px 40px;
            background-position: 0 0, 20px 20px;
        }

        .container {
            background: rgba(255, 255, 255, 0.9); /* White background with slight transparency */
            border-radius: 15px;
            padding: 20px;
        }

        .form-label {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <form method="post" asp-controller="Employee" asp-action="EmployeeRegister" class="col-md-5 mx-auto mt-5 text-center container">
        <h2 class="mb-4">Register New Employee</h2>

        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" asp-for="Name">
        </div>

        <div class="mb-3">
            <label for="Surname" class="form-label">Surname</label>
            <input type="text" class="form-control" id="Surname" name="Surname" asp-for="Surname">
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" asp-for="Email">
        </div>

        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" asp-for="Password">
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
