@model Prog7311_POE_ST10071737.Models.farmerLoginVM
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Farmer Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG6212_POE_Final_ST10071737.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f0f8ff; /* Light blue background for better visibility */
            background-image: linear-gradient(45deg, #7fbf5b 25%, transparent 25%, transparent 50%, #7fbf5b 50%, #7fbf5b 75%, transparent 75%, transparent), 
                              linear-gradient(45deg, #7fbf5b 25%, transparent 25%, transparent 50%, #7fbf5b 50%, #7fbf5b 75%, transparent 75%, transparent);
            background-size: 40px 40px;
            background-position: 0 0, 20px 20px;
        }

        .login-form {
            background: rgba(255, 255, 255, 0.9); /* White background with slight transparency */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
        }

        .form-label {
            font-weight: bold;
        }

        .btn {
            width: 100%;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <form method="post" asp-controller="Farmer" asp-action="FarmerLogin" class="login-form col-md-5 mx-auto text-center">
            <h2 class="mb-4">Farmer Login</h2>
            <div class="mb-3">
                <label for="FarmerEmail" class="form-label">Email</label>
                <input type="email" class="form-control" asp-for="FarmerEmail" id="FarmerEmail" required>
            </div>

            <div class="mb-3">
                <label for="FarmerPassword" class="form-label">Password</label>
                <input type="password" class="form-control" asp-for="FarmerPassword" id="FarmerPassword" required>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
            <a href="/Farmer/FarmerRegister" class="btn btn-secondary">Register</a>
        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
