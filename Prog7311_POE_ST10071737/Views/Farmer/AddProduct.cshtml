@model Prog7311_POE_ST10071737.Models.AddProductVM
@{
    Layout = "~/Views/Shared/_FarmerLayout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Add Product</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG6212_POE_Final_ST10071737.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f0f8ff; /* Light blue background for better visibility */
            background-image: linear-gradient(45deg, #7fbf5b 25%, transparent 25%, transparent 50%, #7fbf5b 50%, #7fbf5b 75%, transparent 75%, transparent), linear-gradient(45deg, #7fbf5b 25%, transparent 25%, transparent 50%, #7fbf5b 50%, #7fbf5b 75%, transparent 75%, transparent);
            background-size: 40px 40px;
            background-position: 0 0, 20px 20px;
        }

        h1 {
            text-align: center;
            margin-top: 50px;
        }

        .add-product-form {
            background: rgba(255, 255, 255, 0.9); /* White background with slight transparency */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
        }

        .form-label {
            font-weight: bold;
        }

        .btn {
            width: 100%;
            margin-top: 10px;
        }

        .category-link {
            margin-top: 10px;
            display: inline-block;
        }
    </style>
</head>

<body>
    <h1>Add Product</h1>

    <div class="container">
        <form method="post" asp-controller="Farmer" asp-action="AddProductToDB" class="add-product-form col-md-5 mx-auto mt-5 text-center">
            <div class="mb-3">
                <label for="ProductName" class="form-label">Product Name</label>
                <input type="text" class="form-control" asp-for="ProductName" id="ProductName" required>
            </div>

            <div class="mb-3">
                <label for="ProductDescription" class="form-label">Product Description</label>
                <input type="text" class="form-control" asp-for="ProductDescription" id="ProductDescription" required>
            </div>

            <div class="mb-3">
                <label for="ProductPrice" class="form-label">Product Price</label>
                <input type="text" class="form-control" asp-for="ProductPrice" id="ProductPrice" required>
            </div>

            <div class="mb-3">
                <label for="CategoryID" class="form-label">Category</label>
                <select class="form-control" asp-for="CatagoryID" id="CategoryID" required>
                    @foreach (var category in Model.catagories)
                    {
                        <option value="@category.CategoryId">@category.CategoryName</option>
                    }
                </select>
                <a href="/Farmer/AddCategory" class="btn btn-primary category-link">Add Category</a>
            </div>

            <div class="mb-3">
                <label for="ProductionDate" class="form-label">Production Date</label>
                <input type="date" class="form-control" asp-for="ProductionDate" id="ProductionDate" required>
            </div>

            <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
