@model Prog7311_POE_ST10071737.Models.FarmerHomeVM
@{
    Layout = "~/Views/Shared/_FarmerLayout.cshtml";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Employee login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG6212_POE_Final_ST10071737.styles.css" asp-append-version="true" />
</head>

<div class="container mt-5">
    <h1 class="text-center">Hello @Model.farmerName</h1>

    <div class="row">
        @foreach (var product in Model.products)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title">@product.ProductName</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@product.Description</p>
                        <p class="card-text font-weight-bold">Price: R @product.Price</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
