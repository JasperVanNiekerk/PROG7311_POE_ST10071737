@model Prog7311_POE_ST10071737.Models.FarmerHomeVM
@{
    Layout = "~/Views/Shared/_FarmerLayout.cshtml";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Employee login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG6212_POE_Final_ST10071737.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f0f8ff; /* Light blue background for better visibility */
            background-image: linear-gradient(45deg, #7fbf5b 25%, transparent 25%, transparent 50%, #7fbf5b 50%, #7fbf5b 75%, transparent 75%, transparent), linear-gradient(45deg, #7fbf5b 25%, transparent 25%, transparent 50%, #7fbf5b 50%, #7fbf5b 75%, transparent 75%, transparent);
            background-size: 40px 40px;
            background-position: 0 0, 20px 20px;
        }

        .card-header {
            background-color: #28a745;
            color: white;
        }

        .container {
            background: rgba(255, 255, 255, 0.9); /* White background with slight transparency */
            border-radius: 15px;
            padding: 20px;
        }

        .card-title {
            font-size: 1.5rem; /* Adjusted font size for better readability */
        }

        .card-text {
            margin-bottom: 0.5rem; /* Added margin for spacing between text elements */
        }
    </style>
</head>

<div class="container mt-5">
    <h1 class="text-center">Hello @Model.farmerName</h1>

    <div class="row">
        @foreach (var product in Model.products)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h3 class="card-title">@product.ProductName</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@product.Description</p>
                        <p class="card-text font-weight-bold">Price: R @product.Price</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
